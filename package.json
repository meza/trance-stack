{
  "name": "trance-stack-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "ci": "exit 0",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf node_modules .cache dist",
    "dev": "run-p dev:*",
    "dev:arc": "cross-env PORT=3000 ARC_LOCAL=1 arc sandbox",
    "dev:remix": "remix watch",
    "deploy": "arc deploy production",
    "lint": "eslint --cache --cache-location .cache/eslint .",
    "test": "vitest",
    "postinstall": "remix-esbuild-override",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"cypress open\"",
    "test:e2e:run": "cross-env PORT=3000 start-server-and-test dev http://localhost:3000 \"cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p lint typecheck test:e2e:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/dist"
  ],
  "dependencies": {
    "@architect/architect": "^10.7.3",
    "@architect/functions": "^5.3.0",
    "@remix-run/architect": "^1.7.6",
    "@remix-run/node": "^1.7.6",
    "@remix-run/react": "^1.7.6",
    "@remix-run/server-runtime": "^1.7.6",
    "bcryptjs": "^2.4.3",
    "cuid": "^2.1.8",
    "i18next": "^22.0.6",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-fs-backend": "^2.0.1",
    "i18next-http-backend": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "remix-i18next": "^4.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@commitlint/config-conventional": "^17.3.0",
    "@faker-js/faker": "^7.6.0",
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@remix-run/serve": "^1.7.6",
    "@testing-library/cypress": "^8.0.7",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/architect__functions": "^3.13.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^8.4.10",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^2.2.0",
    "c8": "^7.12.0",
    "commitlint": "^17.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^11.2.0",
    "esbuild": "^0.16.0",
    "esbuild-copy-static-files": "^0.1.0",
    "eslint": "^8.28.0",
    "eslint-config-tailored-tunes": "^5.0.2",
    "happy-dom": "^7.7.0",
    "lefthook": "^1.2.2",
    "mock-aws-s3": "^4.0.2",
    "msw": "^0.49.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.17.1",
    "remix-esbuild-override": "^3.0.4",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.27.0",
    "yarn": "^1.22.19"
  },
  "engines": {
    "node": ">=16"
  }
}
