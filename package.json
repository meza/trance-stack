{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:arc": "cross-env NODE_ENV=development arc sandbox",
    "dev": "remix build && run-p \"dev:*\"",
    "lint": "eslint --ext .ts,.tsx,.json src",
    "prepare": "lefthook install",
    "report": "exit 0",
    "start": "cross-env NODE_ENV=production arc sandbox",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@aws-sdk/smithy-client": "^3.0.0",
    "@aws-sdk/types": "^3.0.0",
    "@remix-run/architect": "^1.12.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/server-runtime": "^1.12.0",
    "cross-env": "^7.0.3",
    "mixpanel-browser": "^2.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@architect/architect": "^10.7.2",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@commitlint/prompt-cli": "17.4.2",
    "@meza/adr-tools": "^1.0.10",
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@types/mixpanel-browser": "^2.38.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "eslint": "^8.27.0",
    "eslint-config-tailored-tunes": "5.0.2",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-security": "1.7.1",
    "lefthook": "^1.2.8",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.27.0",
    "typescript": "^4.8.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ]
    }
  },
  "engines": {
    "node": ">=18"
  }
}
